<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_serial_console"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="go.upsseriallogger.SerialConsoleActivity">

       <LinearLayout style="?android:buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="65dp">

          <Button style="?android:buttonBarButtonStyle"
            android:text="@string/button_ESCH"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:id="@+id/ESCH"
            android:onClick="ESCH_click" />

           <Button style="?android:buttonBarButtonStyle"
            android:text="@string/button_ESCL"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:id="@+id/ESCL"
            android:onClick="ESCL_click" />

           <Button style="?android:buttonBarButtonStyle"
            android:text="@string/button_ESCB"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:id="@+id/ESCB"
            android:onClick="ESCB_click" />

           <Button style="?android:buttonBarButtonStyle"
            android:text="@string/button_ESCN"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:id="@+id/ESCN"
            android:onClick="ESCN_click" />

           <Button style="?android:buttonBarButtonStyle"
            android:text="@string/button_Clear"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:id="@+id/clearlist"
            android:onClick="clearlist_click" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listview3"
            android:layout_margin="10dp"
            android:transcriptMode="alwaysScroll"
            android:stackFromBottom="true"
            />
    </FrameLayout>
</LinearLayout>
